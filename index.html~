<script>  
    var socket = io.connect('localhost:8080/');
  
  	i=-180;
  
  setInterval(function(){ 
  socket.emit('event', { message: i });
  console.log(i);
  i++;
  if (i==181) {i=-180;}
  
   }, 1000);

  a=0;  
  while (a<1) {
  	
	i=-180;
  	
  	console.log(i);
  		socket.emit('event', { message: i });
  
  i=i+1;
  console.log(i);
  if (i==181) {i=-180;}
  }
    
    

    socket.on('announcements', function(data) {
        console.log('Got announcement:', data.message);
    });
</script>